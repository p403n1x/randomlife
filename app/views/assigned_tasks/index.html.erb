<div class="container">
  <h1 class="my-3" style="color: white;"> <strong> My tasks</strong></h1>
  <div class="row">
    <div class="container formnew">
      <% @tasks.each do |task| %>
      <div class="card w-75 my-3 mx-auto" style="border-radius: 5px; opacity: 0.9;">
        <div class="card-body">

          <% if task.progress == "pending" %>

            <h5 class="card-title" style="color: #3B5F0D"> <strong> <%= task.category.title.capitalize %> </strong></h5>
            <p class="card-text"><%= task.name %></p>

            <p class="card-text"><%= task.start_date %></p>
              <%= simple_form_for task, url: user_assigned_task_path(current_user, task), method: :patch do |f| %>
                <%= f.input :progress, input_html:{value: "done"}, as: :hidden %>
                <%= f.submit "Done !", class: "btn btn-ghost" %>
              <% end %>
          <% else %>
            <h5 class="card-title"><i class="far fa-check-circle mr-2" style="color: grey"></i><s style="color: grey"><%= task.name.capitalize %></s></h5>
            <%= link_to "x", user_assigned_task_path(current_user, task), method: :delete, data: { confirm: "Are you sure?" }, class:'btn-action' %>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>



