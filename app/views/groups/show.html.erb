<div class="container">
  <button type="button" class="btn-ghost mb-3" style="border: transparent;" data-toggle="modal" data-target="#exampleModal">Add someone</button>
  <div class="container">
    <h1 class="mb-3" style="color: white;"><strong><%= @group.name %></strong> </h1>
      <div class="row">
      </div>
  </div>
    <div class="row">
      <div class="height-100vh" style="width: 27em; align-content: space-around;">
        <div class="card-body text-center">
            <div class="card-profile p-3 ">
              <h5 class="d-inline card-title" style="color: #E46A2D;"> <strong>We live at :</strong> </h5>
              <p class="card-title"> <%= @group.address%> </p>
            </div>
          <br>
            <div class="card-profile mb-2">
              <p class="card-body m-2" style="line-height: 25px;">üè†  <br> <%= @group.description %> </p>
            </div>
          </div>
          <br>
        </div>
    </div>
  </div>

  <div class="row ">

    <div class="col-md-6">

        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" style="color: #E46A2D;" id="exampleModalLabel">Add someone</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="container formnew">
                <%= simple_form_for [@group, @user] do |f| %>
                <%= f.input :nickname %>
                <%= f.input :email %>
                <br>
                <%= f.button :submit, 'Send email' , class:'btn btn-ghost' %>
                <% end %>
              </div>
            </div>
          </div>
          <%= link_to 'delete someone', group_path(@user), method: :delete  %>
        </div>
      </div>
